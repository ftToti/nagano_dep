<h1>Members_Orders_Index</h1>

<div class="container">
	<h4>注文履歴一覧</h4>

	<table class="table table-bordered">
		<thead class="thead-light">
			<tr>
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払い金額</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
					<td>
						<%= order.postcode %>
						<%= order.address %>
						<%= order.addressee %>
					</td>
					<td>
						<% order.order_products.each do |op| %>
							<%= op.product.name %><br>
						<% end %>
					</td>
					<td><%= order.subtotal %>円</td>
					<td>
						<% if order.order_status == 1 %>
							入金待ち
						<% elsif order.order_status == 2 %>
							入金確認
						<% elsif order.order_status == 3 %>
							発送準備中
						<% elsif order.order_status == 4 %>
							発送済み
						<% end %>
					</td>
					<td><%= link_to '表示する', members_order_path(order), class: 'btn btn-primary' %></td>
				</tr>
			<% end %>
		</tbody>
	</tabele>
</div>